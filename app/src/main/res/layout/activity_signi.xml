<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:hint="http://schemas.android.com/apk/res-auto"
    tools:context="woofer.com.romaunt.signiActivity"
    android:background="#ECE9EC">
    <woofer.com.romaunt.TitleBar
        android:id="@+id/actionbarsignin"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#3CB3A6"
        hint:leftwidth="@dimen/activity_horizontal_margin"
        hint:rightwidth="@dimen/activity_horizontal_margin"
        hint:titletcolor="#FFFFFF"
        hint:titletext="注册"
        hint:titlesize="26dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/imageView2"
        android:layout_marginTop="155dp"
        android:src="@drawable/img"
        android:paddingRight="80dp"
        android:paddingLeft="80dp"
        android:layout_marginBottom="24dp"
        />
    <EditText
        android:layout_below="@id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#FFFFFF"
        android:id="@+id/eT1"
        android:hint="验证码十五分钟内有效"
        android:maxLength="6"
        android:digits="0123456789"
        android:paddingLeft="35dp"
        />

    <EditText
        android:layout_below="@id/eT1"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#FFFFFF"
        android:id="@+id/eT2"
        android:hint="输入昵称"
        android:paddingLeft="35dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/btn1"
        android:layout_below="@id/eT2"
        android:background="#32B9AA"
        android:text="下一步"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:textSize="24dp"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignRight="@+id/eT1"
        android:layout_alignEnd="@+id/eT1"
        android:background="#32B9AA"
        android:text="再次发送"

        android:textSize="18dp"
        android:textColor="#FFFFFF"/>


</RelativeLayout>
