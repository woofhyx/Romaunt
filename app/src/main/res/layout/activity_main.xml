<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hint="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="woofer.com.romaunt.MainActivity"
    android:background="#ECE9EC"
    >

<woofer.com.romaunt.TitleBar
    android:id="@+id/actionbarmain"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#3CB3A6"
    />

<ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/imageView2"
        android:layout_marginTop="155dp"
        android:src="@drawable/img"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:layout_marginBottom="24dp"
        />
    <EditText
        android:layout_below="@id/imageView2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/eT1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:digits="0123456789"
        android:maxLength="11"
        android:hint="手机号"
        android:background="#FFFFFF"
        android:paddingLeft="35dp"

       />
    <EditText
        android:layout_below="@id/eT1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:id="@+id/eT2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyz"
        android:hint="输入密码"
        android:maxLength="14"
        android:background="#FFFFFF"
        android:paddingLeft="35dp"
        android:layout_marginTop="1dp"
        android:password="true"
        android:layout_marginBottom="5dp"
        />
    <CheckBox
        android:id="@+id/checkbox1"
        android:layout_below="@id/eT2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="显示密码"
        android:textSize="18dp"/>
    <Button
        android:background="#32B9AA"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/button"
        android:text="注册"
        android:textSize="24dp"
        android:textColor="#FEFEFE"
        android:layout_below="@id/checkbox1"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        />

    <TextView
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:clickable="true"
        android:text="登陆"
        android:textSize="30sp"
        android:textColor="#4B4B4C"
        android:id="@+id/textView"
        android:layout_below="@id/button"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        />
</RelativeLayout>
