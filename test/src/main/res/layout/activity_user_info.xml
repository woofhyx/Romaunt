<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hint="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context="com.woofer.activity.UserInfoActivity">
    <com.woofer.titlebar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#198E7B"
        android:id="@+id/actionbar_userinfo"
        hint:titletcolor="#FFFFFF"
        hint:titlesize="20sp"
        hint:titletext="个人信息"
        hint:leftwidth="30dp"
        android:clickable="true">

    </com.woofer.titlebar.TitleBar>

    <RelativeLayout
        android:layout_below="@id/actionbar_userinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FEFEFE"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#EEEEEE"
        android:id="@+id/touxiang_TV"/>
    <com.woofer.ui.ImageTexttouxiang
        android:layout_below="@id/touxiang_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"

        android:id="@+id/user_info_avatar"
        >
    </com.woofer.ui.ImageTexttouxiang>
    <com.woofer.ui.ImageText
        android:layout_below="@id/user_info_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_info_username"
        android:background="#FFFFFF">

    </com.woofer.ui.ImageText>
    <com.woofer.ui.ImageText
        android:layout_below="@id/user_info_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_info_sex"
        android:background="#FFFFFF">

    </com.woofer.ui.ImageText>
        <com.woofer.ui.Texttextimg
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_info_sign"
            android:background="#FFFFFF"
            android:layout_below="@id/user_info_sex">

        </com.woofer.ui.Texttextimg>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/user_info_sign"
        android:id="@+id/user_info_TV"
        android:background="#EEEEEE"/>
    <com.woofer.ui.ImageText
        android:layout_below="@id/user_info_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_info_IT3"
        android:background="#FFFFFF">
    </com.woofer.ui.ImageText>
    <com.woofer.ui.ImageText
        android:layout_below="@id/user_info_IT3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_info_IT4"
        android:background="#FFFFFF">

    </com.woofer.ui.ImageText>
    </RelativeLayout>
</RelativeLayout>
