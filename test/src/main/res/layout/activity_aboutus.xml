<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hint="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.woofer.activity.AboutusActivity"
    android:background="#FFFFFF"
    >

    <com.woofer.titlebar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#198E7B"
        android:id="@+id/actionbar_aboutus"
        hint:titletcolor="#FFFFFF"
        hint:titlesize="20sp"
        hint:titletext="关于我们"
        hint:leftwidth="30dp"
        android:clickable="true">
    </com.woofer.titlebar.TitleBar>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:src="@drawable/img"
        android:layout_below="@+id/actionbar_aboutus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"

        android:id="@+id/activity_aboutus_IV1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="V1.2.5Build1087.101211(C1100)(12443619)"
        android:layout_below="@+id/activity_aboutus_IV1"
        android:layout_centerHorizontal="true"
        android:textColor="#94A2A6"
        />

    <TextView
        android:id="@+id/copyright_TV"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textColor="#94A2A6"
        android:text="Copyright © 2016 WOOFER.ALL Rights Reserved"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_above="@id/copyright_TV"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="OUREDA ANDROID 版权所有"
        android:textColor="#94A2A6"
        android:id="@+id/banquan_TV"
        android:textSize="16dp"
        android:layout_marginBottom="10dp"/>
    <Button
        android:layout_above="@id/banquan_TV"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@null"
        android:text="用户使用协议"
        android:textSize="18dp"
        android:textColor="#8DD4F0"
        />

</RelativeLayout>
