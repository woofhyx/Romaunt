<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.woofer.activity.MainActivity"
    android:background="#FFFFFF"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/itemTV0"/>
    <TextView
        android:layout_below="@id/itemTV0"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"

        android:background="#E3F8F5"
        android:textColor="#52C4B8"
        android:id="@+id/itemIV1"/>

    <TextView
        android:maxLength="14"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/itemTV0"
        android:layout_toRightOf="@id/itemIV1"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textSize="18sp"
        android:textColor="#000000"

        android:id="@+id/activity_one_itemTV1"/>

    <TextView
        android:layout_below="@id/itemTV0"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp"
        android:id="@+id/activity_one_itemTV2"/>
    <ImageView
        android:layout_below="@id/activity_one_itemTV1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"

        android:src="@drawable/img_my"
        android:id="@+id/activity_one_itemIV4"
        />
    <TextView
        android:layout_toRightOf="@id/activity_one_itemIV4"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textSize="16sp"
        android:layout_below="@id/activity_one_itemTV1"
        android:id="@+id/activity_one_AuthorID"/>
    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_toRightOf="@id/activity_one_AuthorID"
        android:textSize="14sp"
        android:layout_below="@id/activity_one_itemTV1"
        android:layout_marginLeft="20dp"
        android:id="@+id/activity_one_itemTV4"/>
    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/activity_one_itemTV2"
        android:layout_marginLeft="10dp"
        android:layout_alignLeft="@id/activity_one_itemTV2"
        android:layout_alignParentRight="true"

        android:id="@+id/itemIV5"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="16dp"
        android:maxLines="2"
        android:layout_below="@id/activity_one_itemIV4"

        android:id="@+id/itemTV5"/>



</RelativeLayout>
